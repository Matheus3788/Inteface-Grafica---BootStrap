<div class="container">

    <div class="row">
        <div class="col">
            <nav class="navbar navbar-expand-lg bg-primary">
                <div class="container-fluid">
                    <a class="navbar-brand fw-bold text-white" href="#">Sistema WEB</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link active text-white" aria-current="page" href="/">Home</a>
                            <a class="nav-link text-white" href="/consulta">Consulta</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>

    <div class="row"></div>
    <div class="col">
        &nbsp;
    </div>
    <div class="row">
        <div class="col">
            <p class="text-start fs-5">Consulta - Agendamento de Potenciais Clientes</p>
            <p class="text-start fs-6">Sistema utilizado para consultar informações dos usuários cadastrados</p>
        </div>
    </div>

    <div class="row">
        <div class="col">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col bg-white">
            <div class="container text-center">
                <div class="row bg-primary mb-3"> 
                    <div class="col text-light">
                        Nome
                    </div>
                    <div class="col text-light">
                        Endereço
                    </div>
                    <div class="col text-light">
                        Bairro
                    </div>
                    <div class="col text-light">
                        Ações
                    </div>
                </div>
                {{#each posts}}
                {{#dataValues}}
                <div class="row mb-3">
                    <div class="col text-black">
                        {{nome}}
                    </div>
                    <div class="col text-black">
                        {{endereco}}
                    </div>
                    <div class="col text-black">
                        {{bairro}}
                    </div>
                    <div class="col text-black">
                        <a href="/editar/{{id}}" class="btn btn-success">Editar</a>
                        <a href="/excluir/{{id}}" class="btn btn-danger">Excluir</a>
                    </div>
                </div>
                {{/dataValues}}
                {{/each}}
            </div>
        </div>
    </div>

</div>